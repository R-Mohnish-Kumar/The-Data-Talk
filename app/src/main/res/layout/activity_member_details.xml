<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivities.MemberDetailsActivity"
    android:background="@color/light_green">

    <TextView
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/capriola"
        android:text="Membership Details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:elevation="20dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="30dp">

        <RelativeLayout
            android:id="@+id/memberNameRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Name:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberNameTextView"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberStartRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_day" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Joining Date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberStartTextView"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberStatusRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="140dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Membership Status:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberStatusTextView"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberEndRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_month" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Membership Expiration Date:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberEndTextView"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberInviteCodeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="260dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_sort_alphabetically" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Invite Code:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberInviteCodeTextView"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/memberIcUsageRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="320dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                app:srcCompat="@android:drawable/ic_menu_rotate" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:text="Invite Code Usage:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberIcUsageTextView"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="12dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="525dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Open Queries:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="8dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Open Queries:"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:elevation="8dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Open Job/Refer Help:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:elevation="8dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Collab Request:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="145dp"
                android:elevation="8dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="7dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Extend membership by..."
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/paybutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay"
                        android:textColor="@color/white"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="@color/light_green"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_marginTop="300dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="Own an NFT along with extension in community membership"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/buttonpaybynft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay by NFT"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/light_green"
                        android:background="@drawable/rectangle"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>