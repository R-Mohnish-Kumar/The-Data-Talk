<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PodcastActivities.SeasonActivities.MediaPlayerActivity"
    android:background="@drawable/ic_playerbackgroundfile">

    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/playerImageView"
            android:layout_width="290dp"
            android:layout_height="290dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/playerTitleImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/alef"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/seekBar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/playPauseCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/flouroscent_green"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/playPauseButtonImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/forwardCardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/flouroscent_green"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/forwardbutton" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rewindCardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="@color/flouroscent_green"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rewindbutton" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>



    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="510dp"
        android:progressBackgroundTint="@color/flouroscent_green"
        android:progressTint="@color/flouroscent_green"
        android:layout_centerHorizontal="true"
        android:thumb="@drawable/custom_thumb" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/capriola"
        android:text="Playing Now"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/arrow" />

    <ImageButton
        android:id="@+id/menuImageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/menu"
        android:backgroundTint="@color/flouroscent_green" />


</RelativeLayout>